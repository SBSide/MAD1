<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context="com.example.iveci.mad1.Restact">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="레스토랑을 시작하려면 아래를 클릭하세요." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/start"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작함" />

        <Chronometer
            android:id="@+id/chronometer3"
            android:textColor="#060eed"
            android:visibility="invisible"
            android:format="예약시간 경과시간 : %s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mainframe"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="400dp">

        <DatePicker
            android:id="@+id/datePicker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TimePicker
            android:id="@+id/timePicker"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <GridLayout
            android:id="@+id/glval"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="#fbc1c1"
            android:columnCount="2"
            android:rowCount="3">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성인" />

            <EditText
                android:id="@+id/eadult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="청소년" />

            <EditText
                android:id="@+id/eteen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어린이" />

            <EditText
                android:id="@+id/echild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </GridLayout>

        <GridLayout
            android:id="@+id/glresult"
            android:background="#ffffff"
            android:layout_gravity="center"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:rowCount="7"
            android:columnCount="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:textSize="20dp"
                android:textColor="#0915f2"
                android:text="예약 결과는 다음과 같습니다." />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜:" />

            <TextView
                android:id="@+id/tday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입력대기" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간:" />

            <TextView
                android:id="@+id/ttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00시 00분" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성인:" />

            <TextView
                android:id="@+id/tadult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0명" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="청소년:" />

            <TextView
                android:id="@+id/tteen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0명" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어린이:" />

            <TextView
                android:id="@+id/tchild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0명" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:textSize="20dp"
                android:text="예약되었습니다." />
        </GridLayout>

    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="1"
        android:columnCount="2">

        <Button
            android:id="@+id/bprev"
            android:layout_columnWeight="1"
            android:onClick="resClick"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전" />

        <Button
            android:id="@+id/bnext"
            android:layout_columnWeight="1"
            android:onClick="resClick"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음" />
    </GridLayout>

</LinearLayout>
